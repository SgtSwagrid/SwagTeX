\setlist[lnum]{label=\arabic*.}
\newcommand {\listnum} [2] [] { \EnvParam{lnum}{#1}{#2} }
\newcommand {\minilistnum} [1] { \EnvParam{lnum}{noitemsep}{#1} }
\newcommand {\sublistnum} [1] { \vspace{-5pt} \minilistnum{#1} \vspace{-3pt} }

\newlist{lalph}{enumerate}{2}
\setlist[lalph]{label=\alph*.}
\newcommand {\listalph} [2] [] { \EnvParam{lalph}{#1}{#2} }
\newcommand {\minilistalph} [1] { \EnvParam{lalph}{noitemsep}{#1} }
\newcommand {\sublistalph} [1] { \vspace{-5pt} \minilistalph{#1} \vspace{-3pt} }

\newlist{lAlph}{enumerate}{2}
\setlist[lAlph]{label=\Alph*.}
\newcommand {\listAlph} [2] [] { \EnvParam{lAlph}{#1}{#2} }
\newcommand {\minilistAlph} [1] { \EnvParam{lAlph}{noitemsep}{#1} }
\newcommand {\sublistAlph} [1] { \vspace{-5pt} \minilistAlph{#1} \vspace{-3pt} }

\newlist{lroman}{enumerate}{2}
\setlist[lroman]{label=\roman*.}
\newcommand {\listroman} [2] [] { \EnvParam{lroman}{#1}{#2} }
\newcommand {\minilistroman} [1] { \EnvParam{lroman}{noitemsep}{#1} }
\newcommand {\sublistroman} [1] { \vspace{-5pt} \minilistroman{#1} \vspace{-3pt} }

\newlist{lRoman}{enumerate}{2}
\setlist[lRoman]{label=\Roman*.}
\newcommand {\listRoman} [2] [] { \EnvParam{lRoman}{#1}{#2} }
\newcommand {\minilistRoman} [1] { \EnvParam{lRoman}{noitemsep}{#1} }
\newcommand {\sublistRoman} [1] { \vspace{-5pt} \minilistRoman{#1} \vspace{-3pt} }

\newcommand {\List} [2] [] {
    \ifthenelse {\equal{#1}{b}} {\listbullet{#2}} { % b = bullet
    \ifthenelse {\equal{#1}{n}} {\listnum{#2}} { % n = number
    \ifthenelse {\equal{#1}{a}} {\listalph{#2}} { % a = lower alphabet
    \ifthenelse {\equal{#1}{A}} {\listAlph{#2}} { % A = upper alphabet
    \ifthenelse {\equal{#1}{r}} {\listroman{#2}} { % r = lower roman
    \ifthenelse {\equal{#1}{R}} {\listRoman{#2}} { % R = upper roman
    \listbullet{#2} % Default.
}}}}}}}

\newcommand {\MiniList} [2] [] {
    \ifthenelse {\equal{#1}{b}} {\minilistbullet{#2}} { % b = bullet
    \ifthenelse {\equal{#1}{n}} {\minilistnum{#2}} { % n = number
    \ifthenelse {\equal{#1}{a}} {\minilistalph{#2}} { % a = lower alphabet
    \ifthenelse {\equal{#1}{A}} {\minilistAlph{#2}} { % A = upper alphabet
    \ifthenelse {\equal{#1}{r}} {\minilistroman{#2}} { % r = lower roman
    \ifthenelse {\equal{#1}{R}} {\minilistRoman{#2}} { % R = upper roman
    \minilistbullet{#2} % Default.
}}}}}}}

\newcommand {\Sublist} [2] [] {
    \ifthenelse {\equal{#1}{b}} {\sublistbullet{#2}} { % b = bullet
    \ifthenelse {\equal{#1}{n}} {\sublistnum{#2}} { % n = number
    \ifthenelse {\equal{#1}{a}} {\sublistalph{#2}} { % a = lower alphabet
    \ifthenelse {\equal{#1}{A}} {\sublistAlph{#2}} { % A = upper alphabet
    \ifthenelse {\equal{#1}{r}} {\sublistroman{#2}} { % r = lower roman
    \ifthenelse {\equal{#1}{R}} {\sublistRoman{#2}} { % R = upper roman
    \sublistbullet{#2} % Default.
}}}}}}}

