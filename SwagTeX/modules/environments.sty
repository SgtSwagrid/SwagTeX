\newcommand {\Cases} [1] { \Env {cases}{#1} }
\newcommand {\BMatrix} [1] { \Env{bmatrix}{#1} }

% List environments

\newlist{lbullet}{enumerate}{2}
\setlist[lbullet]{label=\textbullet}
\newcommand {\listbullet} [2] [] { \EnvParam{lbullet}{#1}{#2} }
\newcommand {\minilistbullet} [1] { \EnvParam{lbullet}{noitemsep}{#1} }
\newcommand {\sublistbullet} [1] { \vspace{-5pt} \minilistbullet{#1} \vspace{-3pt} }

